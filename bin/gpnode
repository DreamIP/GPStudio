#!/usr/bin/env bash

DIR=$(dirname "$0")
if [ "$(uname -o)" == "Cygwin" ]; then
    DIR=$(cygpath -aw "${DIR}")
fi

args=""
for arg in "$@"
do
	if [[ $arg == *" "* ]]
	then
		args+=" \"$arg\""
	else
		[ "$arg" = "" ] && args+=" \"\""
		args+=" $arg"
	fi
done

CMD="php \"$DIR/../scripts/tools/gpnode.php\" -a "
CMD+=$args
eval $CMD
